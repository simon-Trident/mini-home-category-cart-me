/* component/IOU/IOU.wxss */
.popup-dom {
  width: 100%;
  height: 100%;
  position: fixed;  /*底部弹出*/
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  background-color: rgba(0, 0, 0, .7);
}

.pop-main {
  position: absolute;
  bottom: 0;
  width: 100%;
  min-height: 600rpx;
  max-height: 800rpx;
  background-color: #fff;
}

.pop-header {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
  background-color: #f3f2f8;
}

.pop-header text {
  position: absolute;
  right: 20rpx;
}

.pop-body {
  margin-bottom: 100rpx;
  max-height: 720rpx;
  overflow: auto;
  padding: 40rpx 20rpx;
  color: #333;
  font-size: 24rpx;
}

.section-item {
  display: flex;
  flex-direction: row;
  padding: 10rpx 0;
  align-items: center;
}

.section-item image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.section-item .detail {
  display: flex;
  flex-direction: column;
}

.detail .tip {
  display: block;
  margin-top: 6rpx;
  color: #999;
}

.pop-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0;
  width: 100%;
}

.pop-btn button {
  font-size: 32rpx;
  height: 100rpx;
  line-height: 70rpx;
  border-radius: 0;
  background-color: #e4393c;
  color: #fff;
  width: 100%;
}