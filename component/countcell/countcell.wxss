/* component/countcell/countcell.wxss */

.popup-dom {
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  background-color: rgba(0, 0, 0, .7);
}

.pop-main {
  position: absolute;
  bottom: 0;
  width: 100%;
  min-height: 600rpx;
  max-height: 800rpx;
  background-color: #fff;
}

.pop-header {
  height: 150rpx;
  padding: 20rpx;
  background-color: #fff;
  font-size: 36rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
}

.pop-header .img {
  width: 30%;
  position: relative;
}

.pop-header .img image {
  position: absolute;
  left: 20rpx;
  top: -50rpx;
  border-radius: 5rpx;
  width: 180rpx;
  height: 180rpx;
}

.pop-header .info {
  width: 60%;
  text-align: left;
  display: flex;
  flex-direction: column;
}

.pop-header .info .price {
  font-size: 36rpx;
  color: #e4393c;
  font-weight: 700;
}

.pop-header .info .count {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
} 

.pop-body {
  margin-bottom: 100rpx;
  max-height: 720rpx;
  overflow: auto;
  padding: 40rpx 20rpx;
  color: #333;
  font-size: 24rpx;
}

.pop-body .amount {
  float: right;
}

.pop-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0;
  width: 100%;
}

.pop-btn button {
  font-size: 32rpx;
  height: 100rpx;
  line-height: 70rpx;
  border-radius: 0;
  background-color: #e4393c;
  color: #fff;
  width: 100%;
}